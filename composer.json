{
  "name": "raptor/test-utils",
  "description": "Testing utils for PHP",
  "require": {
    "php": ">=7.3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "8.*",
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "3.2.*",
    "slevomat/coding-standard": "~4.0",
  },
  "autoload": {
    "psr-0": {
      "Azimuth": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AzimuthTests\\": "tests/"
    }
  },
  "scripts": {
    "test-all": "./vendor/bin/phpunit --colors=always --configuration=all_tests.xml"
  }
}
